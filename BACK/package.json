{
  "name": "back",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "npx ts-node-dev --inspect --transpile-only --ignore-watch node_modules --respawn src/index",
    "prod": "npm run build && npm run start",
    "build": "npx tsc",
    "start": "node --inspect ./dist/index.js",
    "up": "docker-compose up -d",
    "down": "docker-compose down",
    "lint": "eslint --quiet --ext .ts src",
    "test": "npx jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:watch": "npx jest --passWithNoTests --silent --noStackTrace --runInBand --watch",
    "test:cov": "npx jest --coverage",
    "test:unit": "npx jest --runInBand --detectOpenHandles --coverage=false --watch --testMatch \"**/*.spec.ts\"",
    "test:integration": "npx jest --runInBand --detectOpenHandles --coverage=false --watch --testMatch \"**/*.test.ts\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.0.1",
    "jwt-simple": "^0.5.6",
    "mongoose": "^6.8.4",
    "pino": "^8.8.0",
    "pino-pretty": "^9.1.1",
    "ts-node-dev": "^2.0.0",
    "yup": "^0.32.11",
    "cors": "^2.8.5",
    "supertest": "^6.3.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.16",
    "@types/node": "^18.11.18",
    "@shelf/jest-mongodb": "^4.1.4",
    "@types/bcryptjs": "^2.4.2",
    "@types/jest": "^29.2.4",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "eslint": "8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-import-helpers": "^1.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.3.1",
    "mongodb-memory-server": "^8.10.2",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.3"
  }
}
